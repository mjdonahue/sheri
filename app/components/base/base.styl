body
  font-family: 'Roboto', sans-serif
  background #f4f4f4
  margin 0
.content
  padding: 82px 25px 25px 25px
  @media (min-width:2561px)
    margin-left: 220px

  @media (max-width:460px)
    padding: 0
    padding-top: 56px

.pusher
  position relative
  transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms

a
  color:linkColor
  &:hover
    color: primary
    
.hover-button
  .hover-button-inner
    border-bottom 2px solid #fff
    transition all 300ms 
    &:hover
      cursor pointer
      border-bottom: 2px solid #009be8;
      background: #f4f7fa;