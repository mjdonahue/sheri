.fixed-nav-bar
  cf()
  position: fixed
  box-shadow: inset 0 1px #fff, 0 1px 3px rgba(34,25,25,0.2)
  top: 0
  left: 0
  z-index: 5
  width: 100%
  height: 56px
  background-color: #fff
  .avatar
    float right
    margin-top 4px
    margin-right 10px

  .exit, .chat, .bell
    float right
    margin-top 4px
    position relative

  .bell
    .badge
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      align-content: center;
      align-items: center;
      position: absolute;
      top: 0px;
      right: -3px;
      font-weight: 500;
      width: 20px;
      height: 20px;
      border-radius: 50%;
      font-size 12px
      color: #fff;      
      background-color: #ff4081;      
  .chat
    margin-right 10px
  .exit
    &:before
      content: ' '
      position: absolute
      top: 0px
      left: 0px
      height: 100%
      width: 1px
      background: linear-gradient( to bottom, #fff, #ddd, #fff);
  .controls
    float right
